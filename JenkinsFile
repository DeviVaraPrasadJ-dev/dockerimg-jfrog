pipeline {
    agent any

    environment {
        REGISTRY_URL = 'devivaraprasadj.jfrog.io'
        REPO = 'dockerimage'
        IMAGE_NAME = 'myapp'
        IMAGE_TAG = "v${BUILD_NUMBER}"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/DeviVaraPrasadJ-dev/dockerimg-jfrog.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh """
                  docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .
                """
            }
        }

        stage('Tag Docker Image') {
            steps {
                sh """
                  docker tag ${IMAGE_NAME}:${IMAGE_TAG} ${REGISTRY_URL}/${REPO}/${IMAGE_NAME}:${IMAGE_TAG}
                """
            }
        }

        stage('Push to JFrog') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'jfrog-cred',
                    usernameVariable: 'JF_USER',
                    passwordVariable: 'JF_TOKEN'
                )]) {
                    sh """
                      echo "${JF_TOKEN}" | docker login ${REGISTRY_URL} -u "${JF_USER}" --password-stdin
                      docker push ${REGISTRY_URL}/${REPO}/${IMAGE_NAME}:${IMAGE_TAG}
                    """
                }
            }
        }

        stage('Cleanup Local Images') {
            steps {
                sh """
                  docker rmi ${IMAGE_NAME}:${IMAGE_TAG} || true
                  docker rmi ${REGISTRY_URL}/${REPO}/${IMAGE_NAME}:${IMAGE_TAG} || true
                """
            }
        }
    }
}
